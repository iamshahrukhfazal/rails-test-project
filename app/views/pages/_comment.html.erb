<div id="c_post_<%= comment.id%>" class="comment-card">
    <div class="d-flex justify-content-between">
        <div class="tags-custome">
                Commented By :  <%= comment.user.email%>
        </div>
       <div class="d-flex ">
            <div>
                    Comment :  
            </div>
            <%= time_ago_in_words(comment.updated_at).capitalize()%> ago
        </div>
     </div>
        <div class="mt-2">
           <div class="tags-custome"> Comment </div>  <%= comment.content%>
        </div>
    <div class="d-flex">
      <a href="<%=post_path(comment.post.id)%>" class="inline-block w-100"> <div class="mr-2 btn btn-primary w-100 mt-2" > View Comment</div></a>
      </div>
</div>