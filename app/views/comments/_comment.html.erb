<div>
  <div class="p-3">
    <div class="">
      <div class="d-flex flex-start align-items-center ">
        <img class="rounded-circle shadow-1-strong me-3 mr-2"
          src="https://thumbs.dreamstime.com/b/person-gray-photo-placeholder-man-costume-background-146157490.jpg" alt="avatar" width="60" height="60" />
        <div>
        <% delimiters = ['.', "@"]%>
          <h6 class="fw-bold text-primary mb-1"><%= comment.user.email.split(Regexp.union(delimiters))[0]%></h6>
          <p class="text-muted small mb-0">
           <%= time_ago_in_words(comment.updated_at)%>
          </p>
        </div>
      </div>

      <p class="mt-3 mb-4 pb-2">
        <%= comment.content%>
      </p>
    </div>
    </section>
    <%=render partial: "likes/likeBtn", locals:{likeable:comment}%>
    <div>
      <div class="d-inline">
         <div id="report_<%= comment.id%>">
            <%=  render partial:"reports/form", locals:{ reportable:comment }%>
        </div>
      </div>
    </div>

    <%= render partial:"comments/form", locals:{post:comment.post, parent:comment} %>
    <div class="sub-comments">
    <hr/>
    <%= render partial: "comments/comment", collection: comment.replies %>
    </div>
  </div>
</div>
